    <div data-options="region:'south',border:false" style="text-align:right;padding:5px 5px 5px 5px;">
        <button class="btn btn-primary btn-sm" href="javascript:void(0)" onclick="javascript:submit1()" style="width:80px">确定</button>
    </div>
</div>

<script type="text/javascript">

    function submit1() {
        if ($("form").valid()) {
            $.ajax({
                url: "/Grain/Update",
                type: "Post",
                data: $("form").serialize(),
                dataType: "json",
                success: function (data) {
                    if (data.state == "ok") {
                        window.parent.frameReturnUpdateTrue();
                    }
                    else {
                        window.parent.frameReturnFalse(data.data);
                    }
                }
            });
        }
    }

    //获取汉字转首字母
    function generateFirstSpell() {
        $("#GrainPinYin").val("");
        var value = $("#GrainName").val();
        if (value == "") {
            window.parent.frameReturnFalse("名称不能为空，请首先填写名称。");
            return;
        }

        $.ajax({
            url: "/GenerateCode/FirstSpell",
            type: "Post",
            data: { value: value },
            dataType: "json",
            success: function (data) {
                if (data.state == "ok") {
                    $("#GrainPinYin").val(data.data);
                }
                else {
                    alert(data.data);
                }
            }
        });
    }

</script>

