@model WebApplication.Models.DeviceUpdateModel

@{

}

<div class="easyui-layout" data-options="fit:true">
    <div data-options="region:'center'" style="padding:10px;">
        <form>
            <input type="hidden" asp-for="DeviceId" />
            <div class="container-fluid" style="padding-top:30px;">
                <div class="row">
                    <div class="col-sm-2 text-right font-weight-bold">
                        <span class="text-danger">*&nbsp;</span><label asp-for="DeviceName" class="control-label"></label>：
                    </div>
                    <div class="col-sm-10">
                        <input asp-for="DeviceName" class="form-control" />
                    </div>
                </div>
                <div class="row form-group">
                    <div class="col-sm-2 text-right font-weight-bold">

                    </div>
                    <div class="col-sm-10">
                        <span asp-validation-for="DeviceName" class="text-danger"></span>
                    </div>
                </div>
            </div>
        </form>
    </div>
    <div data-options="region:'south',border:false" style="text-align:right;padding:5px 5px 5px 5px;">
        <button class="btn btn-primary btn-sm" href="javascript:void(0)" onclick="javascript:submit1()" style="width:80px">确定</button>
    </div>
</div>

<script type="text/javascript">

    function submit1() {
        if ($("form").valid()) {
            $.ajax({
                url: "/Device/Update",
                type: "Post",
                data: $("form").serialize(),
                dataType: "json",
                success: function (data) {
                    if (data.state == "ok") {
                        window.parent.frameReturnUpdateTrue();
                    }
                    else {
                        window.parent.frameReturnFalse(data.data);
                    }
                }
            });
        }
    }

</script>