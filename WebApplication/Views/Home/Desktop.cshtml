            background: #dedede;
        }

        .btn.hover-gray-alt:hover, .btn.hover-gray:hover {
            color: #000;
        }

        .bg-black, .hover-black:hover {
            color: #ccc;
            background: #212121;
        }

        .bg-green, .hover-green:hover {
            color: #fff;
            background: #9cd159;
        }

        .bg-orange, .btn.bg-white.hover-orange:hover, .hover-orange:hover {
            color: #fff;
            background: #fa7753;
        }

        .bg-white {
            background: #fff;
        }

        .btn.bg-white:hover {
            color: #666;
        }

        .hover-white:hover {
            background: #fafafa;
        }

        .btn.hover-white:hover {
            color: #666;
        }

        .bg-yellow, .hover-yellow:hover {
            color: #fff;
            background: #fc0;
        }

        .bg-purple, .hover-purple:hover {
            color: #fff;
            background: #984dff;
        }

        .bg-blue-alt, .hover-blue-alt:hover {
            color: #fff;
            background: #65a6ff;
        }

        .bg-azure, .hover-azure:hover {
            color: #fff;
            background: #41e5c0;
