@model WebApplication.Models.CommandUpdateModel

@{
    ViewBag.Title = "Update";

    IList<SelectListItem> iconList = new List<SelectListItem>();
    iconList.Add(new SelectListItem() { Value = "icon-add", Text = "添加" });
    iconList.Add(new SelectListItem() { Value = "icon-remove", Text = "删除" });
    iconList.Add(new SelectListItem() { Value = "icon-edit", Text = "修改" });
    iconList.Add(new SelectListItem() { Value = "icon-save", Text = "保存" });
    iconList.Add(new SelectListItem() { Value = "icon-display", Text = "显示" });
    iconList.Add(new SelectListItem() { Value = "icon-sum", Text = "Excel" });
}

<div class="easyui-layout" data-options="fit:true">
    <div data-options="region:'center'" style="padding:10px;">
        <form>
            <input type="hidden" asp-for="CommandId" />
            <input type="hidden" asp-for="FunctionId" />
            <input type="hidden" asp-for="Href" />
            <input type="hidden" asp-for="Class" />
            <input type="hidden" asp-for="Plain" />
            <input type="hidden" asp-for="Href" />
            <div class="container-fluid" style="padding-top:30px;">
                <div class="row">
                    <div class="col-sm-2 text-right font-weight-bold">
                        <span class="text-danger">*&nbsp;</span><label asp-for="CommandName" class="control-label"></label>：
                    </div>
                    <div class="col-sm-10">
                        <input asp-for="CommandName" class="form-control form-control-sm" />
                    </div>
                </div>
                <div class="row form-group">
                    <div class="col-sm-2 text-right font-weight-bold">

                    </div>
                    <div class="col-sm-10">
                        <span asp-validation-for="CommandName" class="text-danger"></span>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-2 text-right font-weight-bold">
                        <span class="text-danger">*&nbsp;</span><label asp-for="IconCls" class="control-label"></label>：
                    </div>
                    <div class="col-sm-10">
                        @Html.DropDownListFor(m => m.IconCls, iconList, new { Class = "form-control  form-control-sm" })
                    </div>
                </div>
                <div class="row form-group">
                    <div class="col-sm-2 text-right font-weight-bold">

                    </div>
                    <div class="col-sm-10">
                        <span asp-validation-for="IconCls" class="text-danger"></span>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-2 text-right font-weight-bold">
                        <span class="text-danger">*&nbsp;</span><label asp-for="OnClick" class="control-label"></label>：
                    </div>
                    <div class="col-sm-10">
                        <input asp-for="OnClick" class="form-control form-control-sm" />
                    </div>
                </div>
                <div class="row form-group">
                    <div class="col-sm-2 text-right font-weight-bold">

                    </div>
                    <div class="col-sm-10">
                        <span asp-validation-for="OnClick" class="text-danger"></span>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-2 text-right font-weight-bold">
                        <span class="text-danger">*&nbsp;</span><label asp-for="Index" class="control-label"></label>：
                    </div>
                    <div class="col-sm-10">
                        <input asp-for="Index" class="form-control form-control-sm" />
                    </div>
                </div>
                <div class="row form-group">
                    <div class="col-sm-2 text-right font-weight-bold">

                    </div>
                    <div class="col-sm-10">
                        <span asp-validation-for="Index" class="text-danger"></span>
                    </div>
                </div>
            </div>
        </form>
    </div>
    <div data-options="region:'south',border:false" style="text-align:right;padding:5px 5px 5px 5px;">
        <button class="btn btn-primary btn-sm" href="javascript:void(0)" onclick="javascript:submit1()" style="width:80px">确定</button>
    </div>
</div>

<script type="text/javascript">

    function submit1() {
        if ($("form").valid()) {
            $.ajax({
                url: "/Command/Update",
                type: "Post",
                data: $("form").serialize(),
                dataType: "json",
                success: function (data) {
                    if (data == 1) {
                        window.parent.frameReturnUpdateCommandTrue();
                    }
                    else {
                        window.parent.frameReturnFalse();
                    }
                }
            });
        };
    }

</script>

