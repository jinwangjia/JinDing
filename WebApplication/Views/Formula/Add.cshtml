@model WebApplication.Models.FormulaAddModel

@{

}

<div class="easyui-layout" data-options="fit:true">
    <div data-options="region:'center'" style="padding:10px;">
        @using (Html.BeginForm("Add", "Formula", FormMethod.Post, new { id = "Add", autocomplete = "off" }))
        {
            <table width="100%" border="0" align="center" cellpadding="5" cellspacing="1">
                <tr>
                    <td align="right" bgcolor="#F6F6F6"><label asp-for="FormulaName"></label>:</td>
                    <td align="left" bgcolor="#F6F6F6">
                        <input asp-for="FormulaName" />
                        <span asp-validation-for="FormulaName"></span>
                    </td>
                </tr>
                <tr>
                    <td align="right" bgcolor="#F6F6F6"><label asp-for="FormulaCode"></label>:</td>
                    <td align="left" bgcolor="#F6F6F6">
                        <input asp-for="FormulaCode" />
                        <span asp-validation-for="FormulaCode"></span>
                    </td>
                </tr>
                <tr>
                    <td align="right" bgcolor="#F6F6F6"><label asp-for="FormulaPinYin"></label>:</td>
                    <td align="left" bgcolor="#F6F6F6">
                        <input asp-for="FormulaPinYin" />
                        <span asp-validation-for="FormulaPinYin"></span>
                    </td>
                </tr>
                <tr>
                    <td align="right" bgcolor="#F6F6F6"></td>
                    <td align="left" bgcolor="#F6F6F6">
                        <span class="f12red">@ViewBag.Message</span>
                    </td>
                </tr>
            </table>
        }
    </div>
    <div data-options="region:'south',border:false" style="text-align:right;padding:5px 5px 5px 5px;">
        <a class="easyui-linkbutton" data-options="iconCls:'icon-ok'" href="javascript:void(0)" onclick="javascript:submit1()" style="width:80px">确定</a>
    </div>
</div>

<script type="text/javascript">

    function submit1() {
        if ($("form").valid()) {
            $.ajax({
                url: "/Formula/Add",
                type: "Post",
                data: $("#Add").serialize(),
                dataType: "json",
                success: function (data) {
                    if (data.state == "ok") {
                        window.parent.frameReturnAddTrue();
                    }
                    else {
                        window.parent.frameReturnFalse(data.data);
                    }
                }
            });
        }
    }

</script>